name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Set this to your default branch

permissions:
  contents: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    concurrency: ci-${{ github.ref }} # Prevents concurrent deploys from clashing
    
    steps:
      # 1. Checkout the private source code
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v4

      # 2. Setup Build Environment (Example: Node.js)
      # MODIFY THIS SECTION based on your tech stack (React, Vue, Jekyll, etc.)
      - name: Install and Build ğŸ”§
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          
      - name: Install Dependencies
        run: npm ci
        
      - name: Build
        run: npm run build
        # Ensure this creates a folder (e.g., 'dist', 'build', or 'out')

      # 3. Deploy to the External Public Repository
      - name: Deploy ğŸš€
        uses: JamesIves/github-pages-deploy-action@v4
        with:
          # The specific folder the build step generated (CHANGE THIS if needed)
          folder: dist 
          
          # The Personal Access Token you added to secrets
          token: ${{ secrets.API_TOKEN_GITHUB }}
          
          # The Public Repository to push to (Format: username/repo)
          repository-name: your-username/your-public-pages-repo
          
          # The branch the public repo uses for Pages (usually gh-pages or main)
          branch: gh-pages
          
          # Clean the destination branch before deploying (keeps history clean)
          clean: true
